# Nginx: miniapp и платёжные webhook'и на bot.ghostvpn.cc
# Скопируй в /etc/nginx/sites-available/bot.ghostvpn.cc
# и замени путь root на путь к папке miniapp на сервере (например /home/user/ghostvpnbot/miniapp).
# Включи: sudo ln -s /etc/nginx/sites-available/bot.ghostvpn.cc /etc/nginx/sites-enabled/
# Проверь: sudo nginx -t && sudo systemctl reload nginx
#
# Важно для касс: все URL должны быть на домене не ниже второго уровня (не IP:port).
# Callback/webhook URL задавай как https://bot.ghostvpn.cc/...-webhook (см. блок ниже).

server {
    listen 80;
    server_name bot.ghostvpn.cc;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    server_name bot.ghostvpn.cc;

    ssl_certificate     /etc/letsencrypt/live/bot.ghostvpn.cc/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/bot.ghostvpn.cc/privkey.pem;

    root /путь/к/ghostvpnbot/miniapp;
    index index.html;

    location = /app-config.json {
        add_header Access-Control-Allow-Origin "*";
        try_files $uri =404;
    }

    # Платёжные системы и webhook'и — проксируем на бота (порт 8080).
    # В кассах указывай URL: https://bot.ghostvpn.cc/yookassa-webhook и т.д.
    location ~ ^/(webhook|.+-webhook)(/|$) {
        proxy_pass http://127.0.0.1:8080;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 60s;
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
    }

    location / {
        try_files $uri /index.html =404;
    }

    location /miniapp/ {
        proxy_pass http://127.0.0.1:8080/miniapp/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
